%section#wwdc-2016.conference{itemscope: true, itemtype: "http://schema.org/Event"}
  %header
    %img{src: '/images/wwdc-2017.png', width: 125, height: 100, alt: "WWDC 2017"}

    %hgroup
      %h1{itemprop: "name"} WWDC 2017
      %h2 iOS 11, macOS High Sierra, watchOS 4, Xcode 9

    %time{itemprop: "startDate", content: "2017-06-05T10:00"}
    %address{itemprop: "location", itemscope: true, itemtype: "http://schema.org/PostalAddress", hidden: true, style: "display:none;"}
      %span{itemprop: "name"} San Jose McEnery Convention Center
      %span{itemprop: "streetAddress"} 150 W San Carlos St.
      %span{itemprop: "addressLocality"} San Jose
      %span{itemprop: "addressRegion"} CA
      %span{itemprop: "postalCode"} 95113
      %span{itemprop: "addressCountry"} US

  - tracks = @sessions[2017].group_by(&:track)
  - groups = [["Featured", "App Frameworks"], ["Distribution", "Developer Tools", "Media"], ["Graphics and Games", "System Frameworks", "Design"]]
  - for group in groups
    .group
      - for track in group
        - sessions = tracks[track]
        %section.track{id: track.downcase.gsub(/\s+/, "-")}
          %h1= track
          %dl.sessions
            - for session in sessions
              %dt{id: "wwdc-2017-session-#{session.number}"}= session.number
              %dd.title{itemprop: "subEvent", itemscope: true, itemtype: "http://schema.org/Event"}
                %a{href: url(session), title: session.title, itemprop: "name"}= session.title 
