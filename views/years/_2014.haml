%section#wwdc-2014.conference{itemscope: true, itemtype: "http://schema.org/Event"}
  %header
    %img{src: '/images/wwdc-2014.png', width: 130, height: 56, alt: "WWDC 2014"}

    %hgroup
      %h1{itemprop: "name"} WWDC 2014
      %h2 iOS 8, OS X Yosemite, Xcode 6, Swift

    %time{itemprop: "startDate", content: "2014-06-03T10:00"}
    %address{itemprop: "location", itemscope: true, itemtype: "http://schema.org/PostalAddress", hidden: true, style: "display:none;"}
      %span{itemprop: "name"} Moscone West
      %span{itemprop: "streetAddress"} 747 Howard St.
      %span{itemprop: "addressLocality"} San Francisco
      %span{itemprop: "addressRegion"} CA
      %span{itemprop: "postalCode"} 94103
      %span{itemprop: "addressCountry"} US

  - tracks = @sessions[2014].group_by(&:track)
  - groups = [["Special Events", "Frameworks"], ["Services", "Tools", "Graphics and Games"], ["Media", "Core OS"]]
  - for group in groups
    .group
      - for track in group
        - sessions = tracks[track]
        %section.track{id: track.downcase.gsub(/\s+/, "-")}
          %h1= track
          %dl.sessions
            - for session in sessions
              %dt{id: "wwdc-2014-session-#{session.number}"}= session.number
              %dd.title{itemprop: "subEvent", itemscope: true, itemtype: "http://schema.org/Event"}
                %a{href: url(session), title: session.title, itemprop: "name"}= session.title 
